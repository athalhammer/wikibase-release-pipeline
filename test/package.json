{
	"name": "test",
	"version": "3.0.0",
	"type": "module",
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.28",
		"@wdio/cli": "^8.18.2",
		"@wdio/local-runner": "^8.18.2",
		"@wdio/mocha-framework": "^8.18.2",
		"@wdio/reporter": "^8.17.0",
		"@wdio/spec-reporter": "^8.18.1",
		"@wmde/eslint-config-wikimedia-typescript": "^0.2.7",
		"any-eslint-parser": "^1.0.1",
		"api-testing": "^1.6.0",
		"apollo-boost": "^0.4.9",
		"async-wait-until": "^2.0.12",
		"axios": "^1.6.7",
		"cross-fetch": "^4.0.0",
		"dotenv-expand": "^11.0.6",
		"envsub": "^4.1.0",
		"eslint": "^8.57.0",
		"eslint-config-wikimedia": "^0.27.0",
		"eslint-plugin-compat": "^4.2.0",
		"eslint-plugin-unicorn": "^51.0.1",
		"lodash": "^4.17.21",
		"mocha": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"semver-parser": "^4.1.6",
		"stylelint-config-wikimedia": "0.16.1",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"wdio-mediawiki": "2.4.0",
		"wdio-wikibase": "^6.0.1",
		"yaml-eslint-parser": "^1.2.2",
		"yargs": "^17.7.2"
	},
	"browserslist": [
		"ie 11"
	],
	"scripts": {
		"start": "bash test.sh",
		"test": "NODE_NO_WARNINGS=1 npx --node-options='--require ts-node/register --loader=ts-node/esm' node cli.ts",
		"lint": "./lint.sh",
		"lint:js-and-yml": "npx eslint .. --config .eslintrc.json",
		"lint:js-and-yml:fix": "npm run lint:js-and-yml -- --fix",
		"lint:whitespace": "npx eslint \"../**/**\" --config .eslintrc-whitespace.json",
		"lint:whitespace:fix": "npm run lint:whitespace -- --fix",
		"lint:fix": "npm run lint:js-and-yml:fix && npm run lint:whitespace:fix",
		"format:js:fix": "npx prettier \"../**/*.{cjs,js,mjs,ts,json}\" --log-level error --write",
		"format:md:fix": "npx prettier \"../**/*.md\" --log-level error --config ./.prettierrc.json --write",
		"format:yml:fix": "npx prettier \"../**/*.{yml,yaml}\" --write --log-level error --config ./.prettierrc.json --write",
		"format:fix": "npm run format:fix:js && npm run format:fix:md && npm run format:fix:yml"
	}
}
