{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [ "esnext" ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {}
  },
  "ts-node": {
		"files": true,
    "esm": true
  },
  "exclude": [ "node_modules", "tmp" ],
  "include": [ "**/*.ts" ]
}
