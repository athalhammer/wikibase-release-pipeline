#!/usr/bin/env bash

set -ex

# local.env is designated as an env file for the runner in compose
[ -f "local.env" ] || touch local.env
# make sure the docker network exists
docker network create wbs-dev > /dev/null 2>&1 || true

docker compose run --build --rm runner -c "echo \$PATH; ls -ls /workspace/node_modules/.bin; which nx; nx ${*}"
