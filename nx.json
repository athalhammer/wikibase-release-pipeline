{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"installation": {
		"version": "19.5.0",
		"plugins": {
			"@nx/js": "19.5.0",
			"nx/plugins/package-json": "19.5.0"
		}
	},
	"release": {
		"groups": {
			"images": {
				"projects": [ "build/*" ]
			},
			"deploy": {
				"projects": [ "deploy" ]
			}
		},
		"projectsRelationship": "independent",
		"version": {
			"conventionalCommits": true
		},
		"changelog": {
			"projectChangelogs": {
				"createRelease": "github"
			}
		}
	},
	"targetDefaults": {
		"lint": {
			"command": "./lint.sh {projectRoot}"
		},
		"test": {
			"command": "cd test && ./test.sh"
		},
		"build": {
			"command": "cd build && ./build.sh {projectName}"
		},
		"update-commits": {
			"command": "python3 build/update_commits.py {projectRoot}/build.env"
		},
		"nx-release-publish": {
			"command": "echo \"WOULD PUSH TO DOCKERHUB\""
		}
	}
}
